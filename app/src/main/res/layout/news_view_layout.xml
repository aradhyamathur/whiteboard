<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_subject_textview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFD39B"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/news_title_textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="News Title"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginStart="34dp"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/news_date_textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="news date"
                android:layout_below="@+id/news_title_textView8"
                android:layout_alignStart="@+id/news_title_textView8"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/news_infotextView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="news info "
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/news_date_textView8"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/news_date_textView8"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/news_title_textView8"
                android:layout_marginStart="18dp"
                android:text="News"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/news_date_textView8"
                android:layout_alignBottom="@+id/news_date_textView8"
                android:layout_alignStart="@+id/textView3"
                android:text="Date"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/news_infotextView9"
                android:layout_alignStart="@+id/textView5"
                android:text="info"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>