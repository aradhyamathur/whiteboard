<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFD39B"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/assignment_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/assignment_submission_date"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/assignment_submission_date"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"
                android:text="Subject"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/assignment_submission_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/assignment_subject"
                android:layout_marginStart="31dp"
                android:layout_toEndOf="@+id/textView16"
                android:text="Date of submission"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/assignment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/assignment_submission_date"
                android:layout_alignStart="@+id/assignment_submission_date"
                android:layout_below="@+id/assignment_submission_date"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:text="info"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="10dp"
                android:text="Submission Date"
                android:layout_below="@+id/textView7"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/assignment_submission_date"
                android:layout_alignEnd="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_toStartOf="@+id/assignment_info"
                android:text="Subject"
                android:layout_alignTop="@+id/assignment_subject"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView16"
                android:layout_alignTop="@+id/assignment_info"
                android:text="Info"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>